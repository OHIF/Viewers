@import "{lesiontracker}/client/app"

.imageThumbnail
  background-color: $primaryBackgroundColor
  border: 1px solid $uiBorderColorDark
  border-radius: 7px
  height: 135px
  margin: 0 auto
  position: relative
  width: 217px

.imageThumbnailCanvas
  height: 100%
  overflow: hidden

.thumbnailLoadingIndicator
  display: none
  pointer-events: none
  color: #f8a13f
  height: 20px
  width: 100%
  top: 0
  left: 0
  right: 0
  bottom: 0
  margin: auto
  position: absolute

  p
    text-align: center
    font-size: 10pt
