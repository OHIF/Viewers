@import "{design}/app"

.thumbnailEntry.active .imageThumbnail
  border-color: $activeColor
  box-shadow: none
  transition($sidebarTransition)

.imageThumbnail
  background-color: $primaryBackgroundColor
  border: 5px solid transparent
  border-radius: 12px
  box-shadow: inset 0 0 0 1px $uiBorderColorDark
  height: 135px
  margin: 0 auto
  padding 1px 7px
  position: relative
  transition($sidebarTransition)
  width: 217px

  &:hover
    border-color: $hoverColor
    box-shadow: none

.imageThumbnailCanvas
  height: 100%
  overflow: hidden

.thumbnailLoadingIndicator
  display: none
  pointer-events: none
  color: $textSecondaryColor
  height: 20px
  width: 100%
  top: 0
  left: 0
  right: 0
  bottom: 0
  margin: auto
  position: absolute

  p
    text-align: center
    font-size: 10pt
