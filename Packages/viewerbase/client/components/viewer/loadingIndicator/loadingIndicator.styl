@import "{design}/app.styl"

.imageViewerLoadingIndicator
  color: $textSecondaryColor

.faded
  opacity: 0.5

.imageViewerErrorLoadingIndicator
  color: $uiYellow
  
  p, h4
    text-align: center
    padding: 4px 0
    
  p
    font-size: 11pt
      
.loadingIndicator
  display: none
  pointer-events: none // Necessary for click-through to cornerstone element below
  position: absolute
  top: 0
  width: 100%
  height: 100%
  font-size: 18px
  z-index: 100
  background-color: rgba(0,0,0,0.75)
  
  .indicatorContents
    position: absolute
    top: 40%
    width: 100%
    font-size: 30px
    font-weight: 300
    text-align: center