#imageViewerViewports
  height: 100%
  width: 100%

  .viewportContainer
    float: left
    border: 2px solid #777
    
    &.active, &:hover.active
      border: 2px solid #9A6617
      
    &:hover
      border: 2px solid white
    
    .removable
      width: 100%
      height: 100%
      position: relative // Necessary so that the viewportOverlay is on top of the viewports