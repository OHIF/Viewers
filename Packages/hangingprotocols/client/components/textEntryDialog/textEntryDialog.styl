@import "{design}/app.styl"

.textEntryDialog
  display: none
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  z-index: 100
  width: 300px
  height: 170px
  margin: auto
  padding: 10px
  outline: none

  opacity: 0.95
  border-radius: 8px
  border: 1px solid $uiBorderColor
  background: $uiGrayDarkest
  color: $textSecondaryColor

  .dialogContent
    margin-bottom: 10px

  .cancel
    float: left

  .save
    float: right

  input.currentValue
    width: 95%
    text-align: left
    padding: 4px
    color: black
    height: 30px
    border-radius: 2px
    border: 0