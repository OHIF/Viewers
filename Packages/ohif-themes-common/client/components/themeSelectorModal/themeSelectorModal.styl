@import "{ohif:design}/app.styl"

#themeSelectorModal
  .theme-list
    list-style: none
    padding: 0
    
    li
      display: inline-block
      cursor: pointer
      margin-right: 10px
      margin-bottom: 10px
      padding: 10px
      width: 110px
      theme('border', '1px solid $uiBorderColorDark')
      
      &:hover 
        background-color: rgba(21, 25, 30, 0.7)
      
      &:last-child
        margin-right: 0
        
      &.selected
        theme('border', '3px solid $uiBorderColorActive')
        padding: 7px;
        
      .icon-wrapper
        height: 64px
        width: 64px
        margin: 0 auto
        line-height: 6.5
      
      .theme-title 
        font-weight: normal
        font-size: 1.1em
        margin-bottom: 0