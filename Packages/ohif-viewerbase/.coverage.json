{
  "include": [
      "server/*.js",
      "client/*.js",
      "both/*.js"
  ],
  "exclude": {
      "general": [],
      "server": [
          "**/node_modules/**/*.json",
          "**/.?*/**",
          "**/packages/!(local-test_?*.js)",
          "**/+([^:]):+([^:])/**",
          "**/@(test|tests|spec|specs)/**",
          "**/?(*.)test?(s).?*",
          "**/?(*.)spec?(s).?*",
          "**/?(*.)app-test?(s).?*",
          "**/?(*.)app-spec?(s).?*"
      ],
      "client": [
          "**/client/stylesheets/**",
          "**/.npm/package/node_modules/**",
          "**/web.browser/packages/**",
          "**/.?*/**",
          "**/packages/!(local-test_?*.js)",
          "**/+([^:]):+([^:])/**",
          "**/@(test|tests|spec|specs)/**",
          "**/?(*.)test?(s).?*",
          "**/?(*.)spec?(s).?*",
          "**/?(*.)app-test?(s).?*",
          "**/?(*.)app-spec?(s).?*"
      ]
  },
  "remapFormat": [
      "html",
      "cobertura",
      "clover",
      "json",
      "json-summary",
      "lcovonly",
      "teamcity",
      "text",
      "text-summary"
  ],
  "output": "./.coverage"
}