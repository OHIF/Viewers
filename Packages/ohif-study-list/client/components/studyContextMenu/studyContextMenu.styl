@import "{design}/app"

.studyContextMenu
  z-index: 10000
  display: none
  position: absolute
  color:  #2f2f2f
  background-color: #f2f2f2

  width: -moz-fit-content
  width: -webkit-fit-content
  width: fit-content
  width: 207px

  height: -moz-fit-content
  height: -webkit-fit-content
  height: fit-content

  min-width: 100px
  font-size: 14px
  text-align: left
  -webkit-background-clip: padding-box
  background-clip: padding-box
  border: 1px solid rgba(0, 0, 0, .15)
  border-radius: 3px
  -webkit-box-shadow: 0 6px 12px rgba(0, 0, 0, .175)
  box-shadow: 0 6px 12px rgba(0, 0, 0, .175)

  hr
    border-top: solid 1px #d1d1d1
    margin: 2px

  ul
    width: 100%
    margin: 5px 0
    list-style: none
    padding: 0

    li
      clear: both
      white-space: nowrap

      a
        padding: 3px 15px
        display: block
        text-decoration: none
        cursor: pointer
        font-size: 15px
        line-height: 1.7
        color: black

        &:not(.disabled):hover
          theme('color', '$activeColor')
          text-decoration: none

        &.disabled
          opacity: 0.4
          pointer-events: none
          cursor: default

  .fa-lg
    width: 40px
    text-align: center