@import "{design}/app"

#userAccountMenu
  padding: 4px 0
  height: 100%

  .dropdown-toggle
    background-color: $primaryBackgroundColor
    color: $textSecondaryColor
    cursor: pointer
    font-size: 13px
    font-weight: 400
    line-height: 18px
    text-decoration: none

    .menuButton
      border-left: solid 1px #516873
      display: inline-block
      height: 18px
      padding: 0 8px

      .fa
        color: #94a8b3
        font-size: 17px
        line-height: 18px

      .caret-down
        margin: 0 4px 4px 2px
        color: #516873

  ul.dropdown-menu
    li
      cursor: pointer
