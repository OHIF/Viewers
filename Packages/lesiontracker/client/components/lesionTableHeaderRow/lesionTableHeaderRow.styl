@import "../../app"

.lesionTableHeaderRow
  background: $darkUiColor
  color: $textSecondaryColor
  width: 100%
  height: 50px
  display: flex

  div
    flex: 1
    justify-content: space-around
    align-items: stretch
    text-align: center

  .add
    cursor: pointer
    height: 50px
    max-width: 20px

  .type
    cursor: pointer
    padding: 13px 0
    height: 50px
    font-size: 13pt

  .numberOfLesions
    float: right
    font-size: 15pt
    max-width: 30px
    height: 50px
    padding: 13px 5px