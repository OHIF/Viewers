.hidingPanel
  width: 1%
  height: 100%
  position: absolute
  left: 0
  top: 70px
  bottom: 0
  z-index: 10
  background-color: black
  border: 1px solid #666

  &.pinned
    border: 1px solid transparent

  .iconContainer
    width: 100%
    height: 35px
    overflow: hidden

    .arrowIcon
      color: white
      margin: 0px 3px
      font-size: 15pt
      line-height: 35px

    .btnPin
      float: right
      margin: 3px
      outline: none

  .hidingPanelContent
    position: absolute
    left: -130px
    width: 100%
    height: 100%
    margin: 1px auto

    .studyBrowserContainer
      height: calc(100% - 150px)

.hidingPanel, .arrowIcon
  -o-transition: all 0.3s ease-out
  -ms-transition: all 0.3s ease-out
  -moz-transition: all 0.3s ease-out
  -webkit-transition: all 0.3s ease-out
  transition: all 0.3s ease-out