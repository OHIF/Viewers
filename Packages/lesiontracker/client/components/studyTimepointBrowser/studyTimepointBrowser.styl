@import "../../app"

.studyTimepointBrowser
  float: left
  height: 100%
  width: 100%
  overflow: hidden
  background-color: black
  padding-bottom: 20px

  .timepointFollowupTitle
    font-family: Roboto
    font-size: 13px
    color: $textSecondaryColor
    padding-top: 2px
    text-transform: uppercase

  .studyTimepointScrollArea
    height: 100%
    overflow-y: auto
    overflow-x: hidden
    padding-bottom: 50px
    padding-right: 16px
    margin-right: -16px

    &::-webkit-scrollbar
      display: none
