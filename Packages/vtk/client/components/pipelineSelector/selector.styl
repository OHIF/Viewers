@import "{ohif:design}/app"

.pipeline-selector
  theme('color', '$textSecondaryColor')
  display: inline-block
  vertical-align: bottom
  margin-right 5px

  i
    cursor: pointer
    position: relative
    min-width: 12px
    font-weight: 500
    right: 8%

  label
    font-weight: 500

  label.fa-cog
    cursor: pointer
    position: relative
    right: 4%

  .tt-menu
    background-color: #000
    border: 1px solid #3c5d80
    padding: 2%
    width: 100%
    border-bottom-right-radius: 4px
    border-bottom-left-radius: 4px

  .tt-suggestion
    cursor: pointer

  .tt-suggestion:hover
    font-weight: 500
    background-color: #333

  .tt-highlight
    color: #fff
