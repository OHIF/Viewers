@import "{design}/app"

body
  theme('background-color', '$primaryBackgroundColor')

#tblStudyList
  tr
    height: 20px

#worklistTab
  theme('background-color', '$primaryBackgroundColor')

.worklistContainer
  theme('background-color', '$primaryBackgroundColor')
  margin: 0 auto
  color: white
  float: left;
  width: 100%;
        
.tab-content
  width: 100%
  height: calc(100% - 91px)

  .loadingTextDiv
    theme('color', '$textSecondaryColor')
    font-size: 30px

  .tab-pane
    width: 100%
    height: 100%

    .viewerContainer
      height: 100%
      width: 100%