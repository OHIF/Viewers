#worklistToolbar
  background-color: black
  position: absolute
  top: 0
  right: 0

  .btn-file
    position: relative
    overflow: hidden
    width: 30px
    height: 30px
    padding: 5px
    line-height: 20px

    input[type=file]
      position: absolute
      top: 0
      right: 0
      min-width: 100%
      min-height: 100%
      font-size: 100 px
      text-align: right
      opacity: 0
      outline: none
      background: white
      cursor: inherit
      display: block