@import "{design}/app"

.worklistToolbar
  .addNewStudy
    margin: 0 10px

    label
      color: $textSecondaryColor
      font-weight: 400
      cursor: pointer

      *
        pointer-events: none

      &:hover
        color: $hoverColor

      &:active
        color: $activeColor

    input
      width: 0.1px;
      height: 0.1px
      opacity: 0
      overflow: hidden
      position: absolute
      z-index: -1