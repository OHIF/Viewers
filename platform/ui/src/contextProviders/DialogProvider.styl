.DraggableItem
  div
    cursor: grab !important

.DraggableItem.dragging
  div
    cursor: grabbing !important

.DraggableArea, .Overlay
  width: 100vw
  height: 100vh
  position: absolute

.Overlay.active
  position: fixed
  z-index: 999
  left: 0
  top: 0
  width: 100%
  height: 100%
  overflow: auto
  background: rgba(0,0,0,.1)
