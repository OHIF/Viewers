@import './../../design/styles/common/form.styl'
@import './../../design/styles/common/navbar.styl'
@import './../../design/styles/common/state.styl'
@import './../../design/styles/common/global.styl'

.UserPreferencesTabs
  display: flex
  flex-direction: column

  &__selector
    border-bottom: 3px solid black

  .errorMessage
    color: var(--state-error-text)
    font-size: 10px
    text-transform: uppercase;

  .form-content
    border-bottom: 3px solid var(--primary-background-color)
    margin-bottom: 20px
    margin-left: -20px
    margin-right: -20px
    max-height: 70vh
    overflow-y: auto
    padding: 20px
    min-height: 500px

  .popover
    width: 300px
