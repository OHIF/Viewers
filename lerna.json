{
  "version": "independent",
  "packages": [
    "extensions/*",
    "platform/*",
    "modes/*",
    "nl-pacs",
    "nl-ohif-modules/extensions/*",
    "nl-ohif-modules/modes/*",
    "nl-ohif-modules/viewer"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "ignoreChanges": ["*.md", "*.yml", "*.spec.js", "*.test.js"],
      "message": "chore(release): publish"
    },
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "createRelease": "github",
      "yes": true,
      "message": "chore(release): publish [skip ci]"
    }
  }
}
